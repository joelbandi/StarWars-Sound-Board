            android:alpha="0.70f"
            android:textColor="#ff0000"
            android:textStyle="bold" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CLICK ME!"
            android:id="@+id/button6"
